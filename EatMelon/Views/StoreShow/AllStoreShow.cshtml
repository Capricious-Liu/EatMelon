                <!----special-products-grids---->
                <div class="special-products-grids">
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            <div class="col-md-3 special-products-grid1 ">

                                <script language="javascript">

										var arr = document.getElementsByTagName("h1");

										function test(index)
										{
											arr[index].style.visibility = "visible";
											arr[index].nextSibling.style.visibility = "visible";
										}

										function test2(index)
										{
											arr[index].style.visibility = "hidden";
											arr[index].nextSibling.style.visibility = "hidden";
										}

                                </script>
                                <a class="product-here1" style="font-family: 微软雅黑;margin-left:430px ;color: #ff5a60;font-size: xx-large" href=@Url.Content("~/StoreShow/index?store_id=" + item.store_id.ToString())> @item.store_name</a>
                                <a href="这里是等级" style="margin-left: 10px;font-size: large;font-family: 微软雅黑">
                                    (@item.rank)个瓜
                                </a>

                                <div class="productpic">
                                    <ul>
                                        @{
                                            
                                            foreach (var product in item.products)
                                            {
                                                <li onmousemove="test(@i)" onmouseout="test2(@i)"><a href="~/ProductDetails/Details?product_id=@product.product.ID&store_id=@product.product.S_ID"><img src="@product.PICTURE" /><h1></h1><b>@product.product.DESCRIPTION</b></a> </li>
                                                i++;
                                            }
                                        }
                                       
                                    </ul>
                                </div>

                            </div>  <br> <br>
                        }
                    }

                   

                  






                    <div class="clearfix"> </div>
                </div>
                <!---//special-products-grids---->
