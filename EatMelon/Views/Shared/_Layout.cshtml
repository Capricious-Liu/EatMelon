                                    <li><a class="login" href="~/RegisterAndLogin/LoginCheck" style="font-family: 微软雅黑">登录</a></li>
                                    <li><a class="rigister" href="~/RegisterAndLogin/Register" style="font-family: 微软雅黑">注册 <span> </span></a></li>
                                </ul>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    }
}




                

            </div>
            <div class="clearfix"> </div>
        </div>




        <!----//top-header---->
        <div class="top-header-nav">
            <!----start-top-nav---->
            <nav class="top-nav main-menu">
                <ul class="top-nav">
                    <li><a href="products.html" style="font-family: 微软雅黑;color: #ff5a60">商品 </a><span> </span></li>
                    <li><a href="products.html" style="font-family: 微软雅黑;color: #ff5a60">店铺</a><span> </span></li>
                    <li><a href="products.html" style="font-family: 微软雅黑;color: #ff5a60">品牌</a><span> </span></li>
                    <li><a href="products.html" style="font-family: 微软雅黑;color: #ff5a60">联系</a><span> </span></li>
                    <li><a href="products.html" style="font-family: 微软雅黑;color: #ff5a60">关于我们</a><span> </span></li>
                    <div class="clearfix"> </div>
                </ul>
                <a href="#" id="pull">  <img src="~/images/nav-icon.png" title="menu" /> </a>
            </nav>
            <!----End-top-nav---->
            <!---top-header-search-box--->
            <div class="top-header-search-box">
                @using (Html.BeginForm("Index", "SearchProduct"))
                {
                    <input type="text" name="keyString" placeholder="@TempData["KeyString"]" required maxlength="22"/>
                    
                    <input type="submit" value=" " />
                    
                    
                }
            </div>
            <!---top-header-search-box--->
            <div class="clearfix"> </div>
        </div>
    </div>



    <br />

    <div class="container body-content">

        @RenderBody()


        <br />
        <hr />

