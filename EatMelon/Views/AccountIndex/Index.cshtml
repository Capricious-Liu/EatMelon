@model  Tuple<List<EatMelon.Controllers.ProductViewModel>, List<EatMelon.Controllers.OrderViewModel>>


@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>我的账号|吃瓜网|网上商城</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="~/Content/templatemo_main.css">
</head>
<body>
    <div>
        <img src="~/images/logo.jpg">
    </div>
    <div class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <div class="logo"><h1 style="font-family: 微软雅黑">我的账号-账号主页</h1></div>
            <div id="linksbar">
                <!-- class=group>-->
                <li class="icon cart">
                    <a class="trigger" href="~/ShoppingCart/Index">
                        <!-- 跳转到购物车页面 -->
                    </a> |
                </li>
                <li><a href="~/Home/Index" style="font-family: 微软雅黑">首页</a></li>
            </div>
        </div>
    </div>
    <div class="template-page-wrapper">
        <div class="navbar-collapse collapse templatemo-sidebar">
            <ul class="templatemo-sidebar-menu">
                <li class="active"><a href="#"><i class="fa fa-home"></i>账号主页</a></li>
                <li><a href="~/Favour/FavourShow"><i class="fa fa-star"></i>收藏夹</a></li>
                <li><a href="order.html"><i class="fa fa-file-text-o"></i>我的订单</a></li>
                <li><a href="~/CreateStore/MyShop"><i class="fa fa-users"></i>我的商店</a></li>
                <li><a href="~/UpdateInfo/Update"><i class="fa fa-cog"></i>个人资料</a></li>
                <li><a href="javascript:;" data-toggle="modal" data-target="#confirmModal"><i class="fa fa-sign-out" style="font-family: 微软雅黑"></i>登出</a></li>
            </ul>
        </div><!--/.navbar-collapse -->

        <div class="templatemo-content-wrapper">
            <div class="templatemo-content">
                <h1 style="font-family: 微软雅黑">账号主页</h1>
                <div class="templatemo-panels">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 margin-bottom-30">
                            <div class="panel panel-success">
                                <div class="panel-heading" style="font-family: 微软雅黑">我的收藏夹</div>
                                <div class="panel-body">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th style="font-family: 微软雅黑">商铺名</th>
                                                <th style="font-family: 微软雅黑">商品名</th>
                                                <th style="font-family: 微软雅黑">价格</th>
                                                <th>取消收藏</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                for (int i = 0; i < (3 <= Model.Item1.Count ? 3 : Model.Item1.Count); i++)
                                                {
                                                    var temp = Model.Item1[i];
                                                    if (temp == null)
                                                    {
                                                        break;
                                                    }

                                                    <tr>
                                                        <td>@(i + 1)</td>
                                                        <td><a href=#>Xavier的小铺</a></td>
                                                        <td><a href=#>@temp.NAME</a></td>
                                                        <td>￥@temp.PRICE</td> @*整数的价格？*@
                                                        <td><a href="#" class="btn btn-link" style="font-family: 微软雅黑">删除</a></td>
                                                    </tr>


                                                }
                                            }

                                        </tbody>
                                    </table>


                                </div>
                            </div>
                            <span class="btn btn-success"><a href="~/Favour/FavourShow" style="font-family: 微软雅黑">查看更多</a></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 margin-bottom-30">
                            <div class="panel panel-primary">
                                <div class="panel-heading" style="font-family: 微软雅黑">我的订单</div>
                                <div class="panel-body">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th style="font-family: 微软雅黑">商铺名</th>
                                                <th style="font-family: 微软雅黑">商品名</th>
                                                <th style="font-family: 微软雅黑">价格</th>
                                                <th style="font-family: 微软雅黑">创建时间</th>
                                                <th style="font-family: 微软雅黑">查看详情</th>
                                                <th style="font-family: 微软雅黑">删除记录</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @{
                                                for (int i = 0; i < (3 < Model.Item2.Count ? 3 : Model.Item2.Count); i++)
                                                {
                                                    var temp = Model.Item2[i];
                                                    if (temp == null)
                                                    {
                                                        break;
                                                    }
                                                    <tr>
                                                        <td>@(i + 1)</td>
                                                        <td>Xavier的小铺</td>
                                                        <td>@temp.NAME</td>
                                                        <td>@temp.TOTAL_PRICE</td>
                                                        <td>@temp.TIME</td>
                                                        <td><a href=# class="btn btn-default">详情</a></td>
                                                        <td><a href="#" class="btn btn-link" style="font-family: 微软雅黑">删除</a></td>
                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <span class="btn btn-primary"><a href="order.html" style="font-family: 微软雅黑">查看更多</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="templatemo-footer">
            <div class="templatemo-copyright">
                <p>&copy; 吃瓜网 | 保留一切权利 </p>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/Scripts/templatemo_script.js"></script>
</body>
</html>
